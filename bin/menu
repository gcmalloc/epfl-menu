import sys
import codecs
import locale
import epfl.menu
import re

sys.stdout = codecs.getwriter(locale.getpreferredencoding())(sys.stdout) 

def print_parsed_menu(resto_regexp=''):
    restos = epfl.menu.get()
    clean_resto_list = filter(lambda a: re.search(resto_regexp, a[0], flags=re.IGNORECASE), restos.iteritems())
    for (resto_name, resto) in  clean_resto_list:
        print(resto_name)
        for (menu_name, menu) in resto.iteritems():
            print("\t" + menu_name)
            for line in menu:
                print("\t"*2 + line)
            print("")

try:
    if len(sys.argv) > 1:
        print_parsed_menu(sys.argv[1])
    else:
        print_parsed_menu()
except IOError:
    print("Error while parsing the menu")
